{
  "displayName": "Content Consumption Events",
  "name": "content-consumption-events",
  "platform": "web",
  "version": "1.0.1",
  "description": "Provides Events that help measure content consumption.",
  "author": {
    "name": "Jan Exner <jexner@adobe.com>"
  },
  "viewBasePath": "src/view/",
  "events": [
    {
      "displayName": "Scroll 25%",
      "name": "scroll-25",
      "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
          "initDelay": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "triggerOnce": {
            "type": "boolean"
          }
        },
        "required": [
          "initDelay",
          "triggerOnce"
        ],
        "additionalProperties": false
      },
      "libPath": "src/lib/events/scroll25.js",
      "viewPath": "events/scroll50.html"
    },
